<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <groupId>com.github.forax</groupId>
  <artifactId>beautifullogger</artifactId>
  <version>0.9.12</version>
  
  <name>${project.groupId}:${project.artifactId}</name>
  <description>Yet another logger API in Java with beautiful features</description>
  <url>https://github.com/forax/beautiful_logger</url>
  
  <licenses>
    <license>
      <name>MIT License</name>
      <url>http://www.opensource.org/licenses/mit-license.php</url>
    </license>
  </licenses>
  
  <developers>
    <developer>
      <name>Remi Forax</name>
      <email>forax@univ-mlv.fr</email>
      <organization>University Paris-East Marne-la-vallee</organization>
      <organizationUrl>http://www.u-pem.fr/</organizationUrl>
    </developer>
  </developers>
  
  <scm>
    <connection>scm:git:git@github.com:forax/beautiful_logger.git</connection>
    <developerConnection>scm:git:ssh://github.com:forax/beautiful_logger.git</developerConnection>
    <url>https://github.com/forax/beautiful_logger/blob/master/</url>
  </scm>
  
  <distributionManagement>
    <snapshotRepository>
     <id>ossrh</id>
     <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
    <repository>
     <id>ossrh</id>
     <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    
    <pro.artifact>${project.groupId}.${project.artifactId}-${project.version}.jar</pro.artifact>
    <pro.src.artifact>${project.groupId}.${project.artifactId}-source-${project.version}.jar</pro.src.artifact>
    <pro.doc.artifact>${project.groupId}.${project.artifactId}-doc-${project.version}.jar</pro.doc.artifact>
  </properties>

  <dependencies>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <executions>
          <execution>
            <id>default-compile</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>default-testCompile</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>install-pro</id>
            <phase>compile</phase>
            <goals>
              <goal>clean</goal>
            </goals>
            <configuration>
              <filesets>
                <fileset>
                  <directory>pro</directory>
                  <followSymlinks>false</followSymlinks>
                </fileset>
              </filesets>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
            <execution>
                <id>execute-pro</id>
                <phase>compile</phase>
                <goals>
                    <goal>exec</goal>
                </goals>
                <configuration>
                    <executable>${java.home}/bin/java</executable>
                    <arguments>
                      <argument>pro_wrapper.java</argument>
                    </arguments>
                </configuration>                        
            </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <executions>
          <execution>
            <id>default-jar</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5.2</version>
        <configuration>
          <pomFile>${basedir}/pom.xml</pomFile>
          <packaging>jar</packaging>
          <file>${basedir}/target/main/artifact/${pro.artifact}</file>
          <sources>${basedir}/target/main/artifact-src/${pro.src.artifact}</sources>
          <javadoc>${basedir}/target/main/artifact-doc/${pro.doc.artifact}</javadoc>
          <groupId>${project.groupId}</groupId>
          <artifactId>${project.artifactId}</artifactId>
          <version>${project.version}</version>
        </configuration>
        <executions>
          <execution>
            <id>default-install</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>install-pro</id>
            <goals>
              <goal>install-file</goal>
            </goals>
            <phase>install</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-gpg-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>sign-artifacts</id>
            <phase>deploy</phase>
            <goals>
              <goal>sign</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
